<odoo>
    <record
        model="ir.ui.view"
        id="medical_encounter_create_diagnostic_report_form_view"
    >
        <field
            name="name"
        >medical.encounter.create.diagnostic.report.form (in medical_diagnostic_report)</field>
        <field name="model">medical.encounter.create.diagnostic.report</field>
        <field name="arch" type="xml">
            <form string="Create Diagnostic Report">
                <group>
                    <field name="encounter_id" invisible="1" />
                    <field name="template_id" />
                </group>
                <footer>
                    <button
                        name="generate"
                        string="Create"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="medical_encounter_create_diagnostic_report_act_window"
    >
        <field name="name">Medical Encounter Create Diagnostic Report</field>
        <!-- TODO -->
        <field name="res_model">medical.encounter.create.diagnostic.report</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_encounter_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
