<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="assets_backend"
        name="Backend Assets (used in backend interface)"
        inherit_id="web.assets_backend"
    >
        <xpath expr="." position="inside">
            <script
                type="text/javascript"
                src="/medical_diagnostic_report/static/src/js/observation_value_widget.js"
            />
            <script
                type="text/javascript"
                src="/medical_diagnostic_report/static/src/js/field_dynamic_options_dropdown.js"
            />
            <script
                type="text/javascript"
                src="/medical_diagnostic_report/static/src/js/fields.js"
            />
        </xpath>
    </template>
    <template
        id="report_assets_common"
        name="Report Assets (used in backend interface)"
        inherit_id="web.report_assets_common"
    >
        <xpath expr="." position="inside">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/medical_diagnostic_report/static/src/scss/medical_report_layout.scss"
            />
        </xpath>
    </template>
</odoo>
