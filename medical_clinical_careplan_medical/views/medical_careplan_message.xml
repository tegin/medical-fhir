<odoo>
    <record model="ir.ui.view" id="medical_careplan_message_form_view">
        <field
            name="name"
        >medical.careplan.message.form (in medical_careplan_medical)</field>
        <field name="model">medical.careplan.message</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="message_text" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_careplan_message_search_view">
        <field
            name="name"
        >medical.careplan.message.search (in medical_careplan_medical)</field>
        <field name="model">medical.careplan.message</field>
        <field name="arch" type="xml">
            <search>
                <field name="create_date" />
                <field name="create_uid" />
                <field name="message_text" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_careplan_message_medical_message_view">
        <field
            name="name"
        >medical.careplan.message.medical_message (in medical_careplan_medical)</field>
        <field name="model">medical.careplan.message</field>
        <field name="arch" type="xml">
            <medical_message>
                <field name="message_date" />
                <field name="user_creator" />
                <field name="partner_creator" />
                <field name="message_text" />
                <field name="location_id" />
            </medical_message>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_careplan_message_tree_view">
        <field
            name="name"
        >medical.careplan.message.tree (in medical_careplan_medical)</field>
        <field name="model">medical.careplan.message</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" />
                <field name="create_uid" />
                <field name="message_text" />
            </tree>
        </field>
    </record>
</odoo>
