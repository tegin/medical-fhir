<odoo>
    <record model="ir.ui.view" id="medical_request_form">
        <field name="name">medical.request.form</field>
        <field name="model">medical.request</field>
        <field name="inherit_id" ref="medical_workflow.medical_request_form" />
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="show_medical_careplan" invisible="1" />
                <button
                    type="object"
                    name="action_view_request"
                    class="oe_stat_button"
                    icon="fa-heartbeat"
                    attrs="{'invisible': [('show_medical_careplan', '=', False)]}"
                    groups="medical_clinical_careplan.group_medical_careplan_list"
                    context="{'model_name': 'medical.careplan.medical'}"
                >
                    <field
                        name="medical_careplan_count"
                        widget="statinfo"
                        string="Medical Care Plans"
                    />
                    <field name='medical_careplan_ids' invisible="1" />
                </button>
            </xpath>
            <group name="inheritance" position="inside">
                <field
                    name="medical_careplan_id"
                    readonly="1"
                    options="{'no_open': True, 'no_create': True}"
                    attrs="{'invisible': [('medical_careplan_id', '=', False)]}"
                />
            </group>
            <notebook position="attributes">
                <attributes name="invisible">0</attributes>
            </notebook>
        </field>
    </record>
    <record id="medical_request_form_careplan" model="ir.ui.view">
        <field name="name">medical.request.view.form</field>
        <field name="model">medical.request</field>
        <field name="inherit_id" ref="medical_request_form" />
        <field name="arch" type="xml">
            <field name="careplan_id">
                <attribute
                    name="options"
                >{'no_open': False, 'no_create': True}</attribute>
            </field>
        </field>
    </record>
</odoo>
