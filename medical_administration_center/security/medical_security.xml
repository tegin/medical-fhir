<odoo>
    <record id="center_display" model="ir.rule">
        <field name="name">Center Display</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field
            name="groups"
            eval="[(4, ref('medical_administration_location.group_medical_location_display'))]"
        />
        <field name="domain_force">[('is_center', '=', True)]</field>
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
    <record id="center_manager" model="ir.rule">
        <field name="name">Center Manager</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field
            name="groups"
            eval="[(4, ref('medical_administration_location.group_medical_location_manager'))]"
        />
        <field name="domain_force">[('is_center', '=', True)]</field>
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
</odoo>
