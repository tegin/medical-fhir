<odoo>
    <record id="medical_procedure_request_view_form" model="ir.ui.view">
        <field name="name">medical.procedure.request.view.form</field>
        <field name="model">medical.procedure.request</field>
        <field
            name="inherit_id"
            ref="medical_clinical_procedure.medical_procedure_request_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_view_questionnaire"
                    class="oe_stat_button"
                    icon="fa-file-invoice"
                    attrs="{'invisible': ['|', ('state','=','draft'), ('procedure_request_result', '!=', 'medical.questionnaire.response')]}"
                >
                    <field
                        name="questionnaire_response_count"
                        widget="statinfo"
                        string="Questionnaire"
                    />
                    <field name='questionnaire_response_ids' invisible="1" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
