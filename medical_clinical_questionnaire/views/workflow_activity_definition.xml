<odoo>
    <record model="ir.ui.view" id="workflow_activity_definition_form">
        <field name="name">workflow.activity.definition.form</field>
        <field name="model">workflow.activity.definition</field>
        <field name="priority" eval="16" />
        <field
            name="inherit_id"
            ref="medical_clinical_procedure.workflow_activity_definition_form"
        />
        <field name="arch" type="xml">
            <field name="procedure_request_result" position="after">
                <field
                    name="questionnaire_id"
                    attrs="{'invisible': ['|', ('model_id', '!=', %(medical_clinical_procedure.model_medical_procedure_request)s), ('procedure_request_result', '!=', 'medical.questionnaire.response')]}"
                />
            </field>
        </field>
    </record>
</odoo>
