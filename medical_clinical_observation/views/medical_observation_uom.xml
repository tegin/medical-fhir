<odoo>

    <record model="ir.ui.view" id="medical_observation_uom_form_view">
        <field name="name">medical.observation.uom.form (in cb_medical_constants)</field>
        <field name="model">medical.observation.uom</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="symbol"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_observation_uom_search_view">
        <field name="name">medical.observation.uom.search (in cb_medical_constants)</field>
        <field name="model">medical.observation.uom</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="symbol"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_observation_uom_tree_view">
        <field name="name">medical.observation.uom.tree (in cb_medical_constants)</field>
        <field name="model">medical.observation.uom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="symbol"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="medical_observation_uom_act_window">
        <field name="name">Medical Observation UOM</field>
        <field name="res_model">medical.observation.uom</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="medical_observation_uom_menu">
        <field name="name">Medical Observation UOM</field>
        <field name="parent_id" ref="medical_clinical_observation.medical_observation_menu_root"/>
        <field name="action" ref="medical_observation_uom_act_window"/>
        <field name="sequence" eval="15"/>
    </record>

</odoo>
