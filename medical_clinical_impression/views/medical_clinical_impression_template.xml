<odoo>

    <record model="ir.ui.view" id="medical_clinical_impression_template_form_view">
        <field
            name="name"
        >medical.clinical.impression.template.form (in medical_clinical_impression)</field>
        <field name="model">medical.clinical.impression.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- TODO -->
                </header>
                <sheet>
                    <!-- TODO -->
                    <group>
                        <field name="name" />
                        <field name="specialty_id" />
                        <field name="description" />
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_clinical_impression_template_search_view">
        <field
            name="name"
        >medical.clinical.impression.template.search (in medical_clinical_impression)</field>
        <field name="model">medical.clinical.impression.template</field>
        <field name="arch" type="xml">
            <search>

                <field name="name" />
                <field name="specialty_id" />
                <field name="description" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_clinical_impression_template_tree_view">
        <field
            name="name"
        >medical.clinical.impression.template.tree (in medical_clinical_impression)</field>
        <field name="model">medical.clinical.impression.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="specialty_id" />
            </tree>
        </field>
    </record>

    <record
        model="ir.actions.act_window"
        id="medical_clinical_impression_template_act_window"
    >
        <field name="name">Medical Clinical Impression Template</field> <!-- TODO -->
        <field name="res_model">medical.clinical.impression.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="medical_clinical_impression_template_menu">
        <field name="name">Medical Clinical Impression Template</field>
        <field
            name="parent_id"
            ref="medical_base.medical_root_configuration"
        /> <!-- TODO -->
        <field name="action" ref="medical_clinical_impression_template_act_window" />
        <field name="sequence" eval="16" /> <!-- TODO -->
    </record>

</odoo>
